<h1>Add a Peak</h1>
<form action="/peaks" method="post">
	<label>Peak Name</label>
	<!-- <input id='name' type='text' name='name' required autofocus> -->
	<select name="name" required>
		<option value="" selected disabled hidden>Choose here</option>
		<% @all_peaks.each do |peak| %>
			<option value="<%= peak.name %>"><%= peak.name %></option>
		<% end %>
	</select>
	<br>
	<label>Date Hiked</label>
	<input id='date_hiked' type='date' name='date_hiked' placeholder='mm/dd/yyyy' required><br>
	<label>Remarks: </label>
	<input id='remarks' type='text' name='remarks'><br>
	<input class="btn btn-primary" type='submit' value='submit'>
</form>