<h1>Your Peaks</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Count</th>
      <th scope="col">Peak Name</th>
      <th scope="col">Elevation</th>
      <th scope="col">Date Hiked</th>
      <th scope="col">Remarks</th>

    </tr>
  </thead>
  <tbody>
    <% @peaks.each.with_index(1) do |peak, index| %>
    <tr>
      <td><%= index %></td>
      <td scope="row"><a href="/peaks/<%= peak.id %>"><%= peak.name %></a></td>
      <td><%= peak.elevation %>'</td>
      <td><%= peak.date_hiked %></td>
      <td><%= peak.remarks %></td>
      <td><a href="/peaks/<%= peak.id %>/edit">Edit</a></td>
    </tr>
    <% end %>
  </tbody>
</table>
<a href="/peaks/new"><h1>Add a Peak</h1></a>

